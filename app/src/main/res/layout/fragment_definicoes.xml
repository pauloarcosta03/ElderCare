<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ui.definicoes.DefinicoesFragment">

    <TextView
        android:id="@+id/textTipo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/ButtonRemConta"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@drawable/botao_borda"
        android:backgroundTint="#FFE3E3"
        android:drawableRight="@drawable/mcv_action_next"
        android:drawableTint="#B8B8B8"
        android:text="Remover Conta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonLogOut" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonLogOut"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/botao_borda"
        android:drawableRight="@drawable/mcv_action_next"
        android:drawableTint="#B8B8B8"
        android:text="Encerrar SessÃ£o"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ButtonMudarPass" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/ButtonMudarPass"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/botao_borda"
        android:drawableRight="@drawable/mcv_action_next"
        android:drawableTint="#B8B8B8"
        android:text="Mudar password"
        app:layout_constraintBottom_toTopOf="@+id/buttonLogOut"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ButtonGerirPacientes" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/ButtonGerirPacientes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/botao_borda"
        android:drawableRight="@drawable/mcv_action_next"
        android:drawableTint="#B8B8B8"
        android:text="Gerir Pacientes"
        app:layout_constraintBottom_toTopOf="@+id/ButtonMudarPass"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

</androidx.constraintlayout.widget.ConstraintLayout>